<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.CustomersController">
    <children>
        <TableView fx:id="customerTableView" layoutX="281.0" layoutY="132.0" prefHeight="381.0" prefWidth="580.0" AnchorPane.leftAnchor="281.0" AnchorPane.topAnchor="132.0">
            <columns>
                <TableColumn fx:id="cusIdCol" prefWidth="89.0" text="Customer ID" />
                <TableColumn fx:id="cusNameCol" prefWidth="105.0" text="Name" />
                <TableColumn fx:id="cusAddressCol" prefWidth="124.0" text="Address" />
                <TableColumn fx:id="cusPostalCodeCol" prefWidth="82.0" text="Postal Code" />
                <TableColumn fx:id="cusPhoneCol" prefWidth="100.0" text="Phone" />
                <TableColumn fx:id="cusDivIdCol" prefWidth="77.0" text="Division ID" />
            </columns>
        </TableView>
        <VBox layoutX="32.0" layoutY="109.0" prefHeight="451.0" prefWidth="232.0">
            <children>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Customer ID:" />
                <TextField fx:id="cusIDTxtField" prefHeight="3.0" prefWidth="272.0" promptText="Auto Generated">
                    <VBox.margin>
                        <Insets bottom="30.0" />
                    </VBox.margin>
                </TextField>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Name:" />
                <TextField fx:id="cusNameTxtField" promptText="Enter Customer Name">
                    <VBox.margin>
                        <Insets bottom="30.0" />
                    </VBox.margin>
                </TextField>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Address:" />
                <TextField fx:id="cusAddressTxtField" promptText="Enter Customer Address">
                    <VBox.margin>
                        <Insets bottom="30.0" />
                    </VBox.margin>
                </TextField>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Postal Code:" />
                <TextField fx:id="cusPostalCodeTxtField" promptText="Enter Customer Postal Code">
                    <VBox.margin>
                        <Insets bottom="30.0" />
                    </VBox.margin>
                </TextField>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Phone Number:" />
                <TextField fx:id="cusPhoneTxtField" promptText="Enter customer Phone Number">
                    <VBox.margin>
                        <Insets bottom="30.0" />
                    </VBox.margin>
                </TextField>
            <Pane prefHeight="57.0" prefWidth="232.0">
               <children>
                      <Text layoutX="38.0" layoutY="13.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Country:" />
                  <ComboBox fx:id="countryComboBox" layoutY="15.0" onAction="#onActionSetCountry" prefHeight="25.0" prefWidth="119.0" promptText="Select country" />
                  <ComboBox fx:id="regionComboBox" layoutX="122.0" layoutY="15.0" onAction="#onActionSetRegion" prefHeight="25.0" prefWidth="111.0" promptText="Select region" />
                  <Text layoutX="137.0" layoutY="13.0" strokeType="OUTSIDE" strokeWidth="0.0" text="State/Province:" />
               </children>
               <VBox.margin>
                  <Insets bottom="30.0" />
               </VBox.margin>
            </Pane>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Division ID:" />
            <TextField fx:id="cusDivIdTxtField" promptText="Auto Populates" />
            </children>
        </VBox>
        <Text layoutX="326.0" layoutY="70.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Add or Modify Customer">
            <font>
                <Font size="29.0" />
            </font>
        </Text>
        <Text layoutX="478.0" layoutY="128.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Select a customer to modify record" />
      <HBox layoutX="286.0" layoutY="522.0" prefHeight="25.0" prefWidth="573.0" spacing="20.0">
         <children>
              <Button fx:id="addCustomerBtn" mnemonicParsing="false" onAction="#onActionAddCus" prefHeight="25.0" prefWidth="104.0" text="Add Customer">
               <HBox.margin>
                  <Insets left="15.0" />
               </HBox.margin></Button>
              <Button fx:id="modifyCusBtn" mnemonicParsing="false" onAction="#onActionModifyCus" text="Modify Customer" />
            <Button fx:id="deleteCusBtn" mnemonicParsing="false" onAction="#onActionDeleteCus" prefHeight="25.0" prefWidth="110.0" text="Delete Customer" />
            <Button fx:id="clearFormBtn" mnemonicParsing="false" onAction="#onActionClearForm" prefHeight="25.0" prefWidth="79.0" text="Clear Form" />
            <Button fx:id="navigateBackBtn" mnemonicParsing="false" onAction="#onActionNavigateBack" prefHeight="25.0" prefWidth="64.0" text="Back" />
         </children>
      </HBox>
    </children>
</AnchorPane>
