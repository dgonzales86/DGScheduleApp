<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.DisplayScheduleController">
   <center>
      <TableView fx:id="appointmentTableView" prefHeight="548.0" prefWidth="1280.0" style="-fx-background-color: #bbe0e6;">
        <columns>
          <TableColumn fx:id="appointmentIDCol" prefWidth="150.0" text="Appointment ID" />
          <TableColumn fx:id="appointmentTitleCol" prefWidth="120.0" text="Title" />
            <TableColumn fx:id="appointmentDescriptionCol" prefWidth="130.0" text="Description" />
            <TableColumn fx:id="appointmentLocationCol" prefWidth="120.0" text="Location" />
            <TableColumn fx:id="appointmentTypeCol" prefWidth="120.0" text="Type" />
            <TableColumn fx:id="appointmentStartCol" prefWidth="130.0" text="Start" />
            <TableColumn fx:id="appointmentEndCol" prefWidth="130.0" text="End" />
            <TableColumn fx:id="appointmentCustomerCol" prefWidth="120.0" resizable="false" text="Customer" />
            <TableColumn fx:id="appointmentContactCol" prefWidth="120.0" text="Contact" />
            <TableColumn fx:id="appointmentUserCol" prefWidth="127.0" text="User" />
        </columns>
      </TableView>
   </center>
   <top>
      <Label text="Current Schedule" textFill="#0099ff" BorderPane.alignment="CENTER">
         <font>
            <Font name="Arial" size="41.0" />
         </font>
         <BorderPane.margin>
            <Insets bottom="10.0" top="10.0" />
         </BorderPane.margin>
      </Label>
   </top>
   <bottom>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="80.0" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" text="Button" />
            <Button mnemonicParsing="false" text="Button" />
            <Button mnemonicParsing="false" text="Button">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </Button>
            <Button mnemonicParsing="false" text="Button" />
            <Button mnemonicParsing="false" text="Button" />
            <Button mnemonicParsing="false" text="Button" />
            <Button mnemonicParsing="false" text="Button" />
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </HBox>
   </bottom>
</BorderPane>
